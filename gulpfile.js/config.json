{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "javascripts",
      "dest": "js",
      "files": [
          {
            "source": ["src/javascripts/bookeasy-cart.js"],
            "filename": "bookeasy-cart.js"
          },{
            "source": ["src/javascripts/bookeasy-details.js"],
            "filename": "bookeasy-details.js"
          },{
             "source": ["src/javascripts/bookeasy-region.js"],
            "filename": "bookeasy-region.js"
          },{
            "source": ["src/javascripts/bookeasy-booking.js"],
            "filename": "bookeasy-booking.js"
          },{
            "source": ["src/javascripts/bookeasy-utility.js", "src/javascripts/bookeasy-mods.js"],
            "filename": "bookeasy-mods.js"
          },{
            "source": ["src/javascripts/booking-statewide.js"],
            "filename": "booking-statewide.js"
          },{
            "source": [
                "src/javascripts/IM/imutility.js",
                "src/javascripts/IM/gadgets-book-bootstrapped.js",
                "src/javascripts/IM/gadgets-details-bootstrapped.js",
                "src/javascripts/IM/gadgets-details-buttons-underneath.js",
                "src/javascripts/IM/gadgets-minimal-styling.js",
                "src/javascripts/IM/gadgets-region-bootstrapped.js",
                "src/javascripts/IM/gadgets-region-buttons-underneath.js",
                "src/javascripts/IM/gadgets-search-bootstrapped.js",
                "src/javascripts/IM/img-cartbar.js",
                "src/javascripts/IM/responsive.js"
                ],
            "filename": "IM.js"
          }
      ],
      "extensions": ["js"]
    },

    "css": {
      "src": "stylesheets",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": ["./node_modules"]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
  },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    }
  }
}
